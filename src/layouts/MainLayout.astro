---
import navData from "../data/navData";
import '@fontsource-variable/orbitron';

const {
  title = "Layr Felipe",
  description = "Desenvolvedor full stack experimentando o framework Astro",
} = Astro.props;
---

<html lang="pt-BR">
	<head>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description}/>
		<meta charset="UTF-8">
		<title>{title}</title>
	</head>

  <body>
    <main>
		<header>
			<ul>
			{
				navData.map((item) => (
					<a class="route-link" href={item.path}>{item.name}</a>
				))
			}
			</ul>
			</div>
		</header>
		<slot>Recarregue a p√°gina</slot>
    </main>
  </body>
</html>
  
<script>
	import "../js/nav.js";
</script>

<style lang="scss">
  	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		min-height: 100vh;
		font-family: "Orbitron Variable", sans-serif;
		background: black;
		color: white;
    	margin: 0;
    	padding: 0;

		main {
			width: 100%;
			height: 100%;

			header {
				width: 100%;
				color: white;
				display: flex;
				justify-content: center;
				align-items: center;
				padding: 2rem 1rem;
				font-size: 1.5rem;

				a {
					text-decoration: none;
					color: white;
					margin: 0 1rem;
				}

				.route-link {
					font-size: 1.25rem;
				}
			}
		}
	}
</style>