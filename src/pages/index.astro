---

import { Image } from 'astro:assets';
import setup from "../images/setup.webp";
import me from "../images/me.jpeg";
import { Icon } from 'astro-icon/components'
import '@fontsource-variable/orbitron';

---

<html lang="pt-BR">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>A BR Dev website</title>
	</head>
	<body>
		<div id="above-the-fold">
			<section>
				<Image id="me-img" src={me} alt="Layr Felipe"/>
				<div id="social-links">
					<a href="https://github.com/layrfelipe" rel="noreferrer" target="_blank"><Icon name="mdi:github" /></a>
					<a href="https://linkedin.com/in/layr-felipe/" rel="noreferrer" target="_blank"><Icon name="mdi:linkedin" /></a>
					<a href="https://instagram.com/layrfelipe" rel="noreferrer" target="_blank"><Icon name="mdi:instagram" /></a>
				</div>
				<h1>Olá! Meu nome é <span>Layr Felipe</span> e sou um desenvolvedor full stack do Rio de Janeiro.</h1>
				<button>Site em desenvolvimento...</button>
			</section>

			<section>
				<Image id="setup-img" src={setup} alt="Developer setup"/>
			</section>
		</div>
	</body>
</html>

